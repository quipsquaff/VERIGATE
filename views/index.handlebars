<body>

<div class="form">

<div class="imgtitle">
        <img id="xxxx" src="../assets/pictures/XXX.png" alt="SMAHT!"> 
<h2>Verigate</h2>
</div>

    <ul class="tab-group">
        <li id="register-tab" class="tab active"><a href="#signup">Register</a></li>
        <li id="login-tab" class="tab"><a href="#login">Log In</a></li>
    </ul>

    <div class="tab-content">
        <div id="signup">
            <h1>Register Here!</h1>

            <form action="/" method="post">

                <div class="top-row">
                    <div class="field-wrap">
                        <label>
                            First Name<span class="req">*</span>
                        </label>
                        <input id="first-name" type="text" required autocomplete="off" />
                    </div>

                    <div class="field-wrap">
                        <label>
                            Last Name<span class="req">*</span>
                        </label>
                        <input id="last-name" type="text" required autocomplete="off" />
                    </div>
                </div>

                <div class="field-wrap">
                    <label>
                        Email Address<span class="req">*</span>
                    </label>
                    <input id="email" type="email" required autocomplete="off" />
                </div>

                <div class="field-wrap">
                    <label>
                        Set A Password<span class="req">*</span>
                    </label>
                    <input id="password" type="password" required autocomplete="off" />
                </div>

                <div class="field-wrap">
                    <label>
                        Confirm Password<span class="req">*</span>
                    </label>
                    <input id="confirm-password" type="password" required autocomplete="off" />
                </div>

                <button id="register-button" type="click" class="button button-block" />Get Started</button>

            </form>

        </div>

        <div id="login">
            <h1 id="login1" style="display: block">Welcome Back!</h1>
            <h1 id="login2" style="display: none">Thank You for Registering, Please Log in!</h1>

            <form action="/" method="post">

                <div class="field-wrap">
                    <label>
                        Email Address<span class="req">*</span>
                    </label>
                    <input id="user-email" type="email" required autocomplete="off" />
                </div>

                <div class="field-wrap">
                    <label>
                        Password<span class="req">*</span>
                    </label>
                    <input id="user-password" type="password" required autocomplete="off" />
                </div>

                <p class="forgot"><a href="#">Forgot Password?</a></p>

                <button id="login-button" class="button button-block" />Log In</button>

            </form>

        </div>

    </div><!-- tab-content -->

</div> <!-- /form -->

    <script src="assets/js/index.js"></script>
    <script src="assets/js/registration.js"></script>
    <script src="assets/js/login.js"></script>
</body>