<body>
    {{> nav }}


    <!-- Menu Icon -->
    <div class="menuIcon">
        <span class="icon icon-bars"></span>
        <span class="icon icon-bars overlay"></span>
    </div>


    <div class="overlay-menu">
        <ul id="menu">
            <li><a href="/application/?">Home</a></li>
            <li><a href="/devices">Devices</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
            <li><a href="/">Sign Out</a></li>
        </ul>
    </div>
    <br>
    <br>
    <div class="jumbotron jumbotron-fluid" style="none">
        <div class="container">
            <h1 class="greeterMain">Welcome back</h1>

            <ul class="userMain">
                {{#each gatesTable}}

                <li>
                    <strong>GateID: #{{gateID}}</strong> <br>
                    Nickname: {{nickname}} <br>
                    Unit Location: {{unit_location}} <br>
                    SSID: {{SSID}} <br>
                    Pass: {{pass}} <br>
                    Switch Status: {{switch}} <br>
                    <button class="btn btn-primary" data-gate-id="{{gateID}}" class="update-gate">Change Gate Info</button>
                    <button class="btn btn-primary" data-gate-id="{{gateID}}" class="delete-gate">Delete Gate</button>
                    <br>
                    <br><br>

                    {{/each}}
            </ul>

            <div class="text-center mx-auto border border-dark py-1 px-5">
                <h2>Add a Device</h2>
                <form class="create-form">

                    <div class="form-group">
                        <label for="name">Device Nickname:</label>
                        <input type="text" id="device-nickname" name="name">
                        <br>
                        <label for="location">Unit Location:</label>
                        <input type="text" id="device-location" name="location">
                        <br>
                        <label for="ssid">WiFi SSID:</label>
                        <input type="text" id="device-wifi-ssid" name="ssid">
                        <br>
                        <label for="pass">WiFi Password:</label>
                        <input type="text" id="device-wifi-pass" name="pass">
                        <br>
                    </div>

                    <button class="btn btn-primary" type="submit">Add a Device</button>
                </form>
            </div>

        </div>
    </div>
</body>