<body>
    {{> nav }}


    <!-- Menu Icon -->
    <div class="menuIcon">
        <span class="icon icon-bars"></span>
        <span class="icon icon-bars overlay"></span>
    </div>


    <div class="overlay-menu">
        <ul id="menu">
            <li><a href="#home">Home</a></li>
            <li><a href="#services">Services</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
        </ul>
    </div>
<br>
<br>
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="greeterMain">This is our device-update.handlebars file</h1>

        <div class="userMain">
            {{#each gateData}}
                <strong>GateID: #{{gateID}}</strong> <br>
                Nickname: {{nickname}} <br>
                Unit Location: {{unit_location}} <br>
                WiFi SSID: {{SSID}} <br>
                WiFi Pass: {{pass}}
                <br><br>

                <div class="text-center mx-auto border border-dark py-1 px-5">
                <h2>Update Device Information:</h2>
                    <form class="create-form">

                        <div class="form-group">
                            <label for="name">Nickname:</label>
                            <input type="text" id="device-nickname" name="name">
                            <br>
                            <label for="location">Unit Location:</label>
                            <input type="text" id="device-location" name="location">
                            <br>
                            <label for="ssid">WiFi SSID:</label>
                            <input type="text" id="device-wifi-ssid" name="ssid">
                            <br>
                            <label for="pass">WiFi Password:</label>
                            <input type="text" id="device-wifi-pass" name="pass">
                            <br>
                        </div>

                        <button id="update-button" data-gate-id="{{gateID}}" type="submit">Update Device</button>
                        <button id="back-button" type="submit">Go Back!</button>
                    </form>
                </div>
        
            {{/each}}
        </div>



    </div>
</div>
</body>




